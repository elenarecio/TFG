<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

        <EditText
            android:id="@+id/et_crotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crotal"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_raza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Raza"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_madre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crotal de la madre"
            android:inputType="text" />
        <EditText
            android:id="@+id/et_padre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crotal del padre"
            android:inputType="text" />
        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre (opcional)"
            android:inputType="text" />
        <EditText
            android:id="@+id/et_sexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sexo (M/H)"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_fechnac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fecha de nacimiento"
            android:inputType="date" />

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D3389C11"
            android:text="GUARDAR" />

</LinearLayout>
