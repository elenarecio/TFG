<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo2"
    tools:context=".RegistroExplotacionControlador">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/hint_nombre"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        app:layout_constraintBottom_toTopOf="@id/editCrotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1" />

    <EditText
        android:id="@+id/editCrotal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/hint_crotal"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/editNombre"
        app:layout_constraintBottom_toTopOf="@id/editMadre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1" />

    <EditText
        android:id="@+id/editMadre"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/hint_madre"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/editCrotal"
        app:layout_constraintBottom_toTopOf="@id/editPadre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1" />

    <EditText
        android:id="@+id/editPadre"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/hint_padre"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/editMadre"
        app:layout_constraintBottom_toTopOf="@id/editSexo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1" />

    <EditText
        android:id="@+id/editSexo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/hint_sexo"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/editPadre"
        app:layout_constraintBottom_toTopOf="@id/editRaza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1" />

    <EditText
        android:id="@+id/editRaza"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/hint_raza"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/editSexo"
        app:layout_constraintBottom_toTopOf="@id/editFecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1" />

    <EditText
        android:id="@+id/editFecha"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/hint_fecha"
        android:inputType="date"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/editRaza"
        app:layout_constraintBottom_toTopOf="@id/BotonGuardar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1" />

    <Button
        android:id="@+id/BotonGuardar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#DC1F3720"
        android:text="@string/GUARDAR"
        android:textSize="25sp"
        android:padding="8dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/editFecha"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>
